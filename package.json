{
  "name": "test-automation-framework",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "test": "cucumber-js",
    "test:parallel": "cucumber-js --parallel 3",
    "test:api": "cucumber-js --tags @api",
    "test:ui": "cucumber-js --tags @ui",
    "test:report": "cucumber-js --format json:cucumber-report.json && node src/reporters/generate-html-report.js",
    "lint": "eslint . --ext .ts",
    "bruno:run": "bruno run ./bruno/collections --env dev",
    "generate-report": "ts-node src/report/generate-reports.ts",
    "bruno:export": "bruno export ./bruno/collections ./src/services/bruno-exports",
     "allure:generate": "allure generate allure-results --clean -o allure-report",
  "allure:open": "allure open allure-report",
  "allure:deploy": "npm run allure:generate && gh-pages -d allure-report"
  },
  "dependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@playwright/test": "^1.41.2",
    "axios": "^1.6.7",
    "chai": "^5.0.3",
    "chart.js": "^4.4.9",
    "chartjs-node-canvas": "^5.0.0",
    "cucumber-html-reporter": "^7.1.1",
    "dotenv": "^16.4.1",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.344.0",
    "pdfkit": "^0.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/chai": "^4.3.11",
    "@types/cucumber-html-reporter": "^5.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.10",
    "@types/pdfkit": "^0.13.9",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "allure-cucumberjs": "^3.2.2",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
