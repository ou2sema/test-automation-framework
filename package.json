{
  "name": "test-automation-framework",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "test": "cucumber-js --require-module ts-node/register --require 'features/**/*.ts'",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:deploy": "npm run allure:generate && gh-pages -d allure-report",
    "test:parallel": "cucumber-js --parallel 3",
    "test:api": "cucumber-js --tags @api",
    "test:ui": "cucumber-js --tags @ui",
    "test:smoke": "cucumber-js --tags @smoke",
    "test:regression": "cucumber-js --tags @regression",
    "test:report": "cucumber-js --format json:cucumber-report.json && node src/reporters/generate-html-report.js",
    "lint": "eslint . --ext .ts",
    "bruno:run": "bruno run ./bruno/collections --env dev",
    "bruno:export": "bruno export ./bruno/collections ./src/services/bruno-exports",
    "clean": "rimraf allure-results allure-report reports",
    "setup": "npm install && npx playwright install",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@playwright/test": "^1.41.2",
    "axios": "^1.6.7",
    "chai": "^5.0.3",
    "chart.js": "^4.4.9",
    "chartjs-node-canvas": "^5.0.0",
    "cucumber-html-reporter": "^7.1.1",
    "dotenv": "^16.4.1",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.344.0",
    "pdfkit": "^0.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@cucumber/messages": "^27.2.0",
    "@eslint/js": "^9.9.1",
    "@types/chai": "^4.3.11",
    "@types/cucumber-html-reporter": "^5.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.10",
    "@types/pdfkit": "^0.13.9",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "allure-commandline": "^2.34.0",
    "allure-cucumberjs": "^3.2.2",
    "allure-js-commons": "^3.2.2",
    "autoprefixer": "^10.4.18",
    "cross-env": "^7.0.3",
    "cucumberjs-allure2-reporter": "^1.3.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "gh-pages": "^6.3.0",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
